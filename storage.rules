rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /wedding-photos/{photoId} {
      allow read: if true;
      allow write: if request.resource.size < 50 * 1024 * 1024
                  && request.resource.contentType.matches('image/.*');
      allow delete: if true;
    }
  }
}
